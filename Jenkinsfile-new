pipeline {
    agent any
    environment {
        PROJECT_ID = 'carbon-watch-366002'
        CLUSTER_NAME = 'swe645cluster'
        LOCATION = 'us-central1'
        CREDENTIALS_ID = 'multi-k8s'
    }
    stages {
        stage("Checkout code") {
            steps {
                checkout scm
                sh 'ls -l'
                sh 'rm -rf *.war'
                sh 'ls -l'
                sh 'jar -cvf SWE645.war -C surveywebapp/ .'
                sh 'ls -l'
            }
        }
        stage("Build image") {
            steps {
                script {
                    myapp = docker.build("syedzameer0497/swe645hub:${env.BUILD_ID}")
                }
            }
        }
        stage("Push image") {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerID') {
                            myapp.push("latest")
                            myapp.push("${env.BUILD_ID}")
                    }
                }
            }
        }        
        stage('Deploy to GKE') {
            steps{
                sh "sed -i 's/swe645hub:latest/swe645hub:${env.BUILD_ID}/g' deployment.yaml"
                step([$class: 'KubernetesEngineBuilder', projectId: env.PROJECT_ID, clusterName: env.CLUSTER_NAME, location: env.LOCATION, manifestPattern: 'deployment.yaml', credentialsId: env.CREDENTIALS_ID, verifyDeployments: true])
            }
        }
    }    
}
